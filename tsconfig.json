{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "ts",
    "sourceMap": true
  },
  "include": [
    "ts/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}

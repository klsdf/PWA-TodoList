{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./js",
    "rootDir": "./ts",
    "sourceMap": true
  },
  "include": [
    "ts/*",
    "ts/pages"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
